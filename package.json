{
  "name": "atlas",
  "productName": "Atlas",
  "version": "1.0.0",
  "description": "Atlas - Project Management IDE for Claude Code",
  "main": "src/main/index.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "build": "esbuild src/renderer/index.js --bundle --outfile=dist/renderer.js --platform=node --external:electron",
    "watch": "esbuild src/renderer/index.js --bundle --outfile=dist/renderer.js --platform=node --external:electron --watch",
    "start": "npm run build && electron .",
    "dev": "npm run watch & electron .",
    "structure": "node scripts/update-structure.js",
    "structure:changed": "node scripts/update-structure.js --changed",
    "prepare": "git config core.hooksPath .githooks || true",
    "dist": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --mac --win --linux"
  },
  "keywords": [
    "electron",
    "terminal",
    "claude",
    "atlas",
    "ide",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.atlas.ide",
    "productName": "Atlas",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "index.html",
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
